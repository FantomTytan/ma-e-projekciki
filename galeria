    <script>
        const b1 = document.querySelector('.box1')
        const b2 = document.querySelector('.box2')
        const b3 = document.querySelector('.box3')
        const b4 = document.querySelector('.box4')
        const b5 = document.querySelector('.box5')
        const b6 = document.querySelector('.box6')

        const l = document.querySelector('.left')
        const r = document.querySelector('.right')

        const galeria = document.querySelector('.galeria')
        const empty = document.querySelector('.blank')
        const con = document.querySelector('.container')

        let slide;

        let im1 = "url('https://i.insider.com/5d23a4e021a861074807aa86?width=750&format=jpeg&auto=webp')"
        let im2 = "url('https://f4fcdn.eu/wp-content/uploads/2019/03/Toskania.jpg')"
        let im3 = "url('img/skala.jpg')"
        let im4 = "url('img/plaza.jpg')"
        let im5 = "url('https://www.pandotrip.com/wp-content/uploads/2016/05/Uma-Photo-by-COMO-Hotels-and-Resorts3.jpg')"
        let im6 = "url('https://www.goforworld.com/wp-content/uploads/2017/09/vik_iceland.jpg')"

        b1.style.backgroundImage = im1;
        b2.style.backgroundImage = im2;
        b3.style.backgroundImage = im3;
        b4.style.backgroundImage = im4;
        b5.style.backgroundImage = im5;
        b6.style.backgroundImage = im6;

        function leftClick(num) {
            num--;

            boom(num);

            if (num > 0) {
                slide = num;
            } else {
                slide = 7;
                leftClick(slide);
            }

        }


        function rightClick(num) {

            num++;

            boom(num);

            if (num <= 6) {
                slide = num;
            } else {
                slide = 0;
                rightClick(slide);
            }

        }

        function openBlank() {
            empty.style.opacity = '1';
            empty.style.zIndex = '3';
        }


        function boom(element) {

            if (element === 1) {
                con.style.backgroundImage = im1;
                slide = 1;
            } else if (element === 2) {
                con.style.backgroundImage = im2;
                slide = 2;
            } else if (element === 3) {
                con.style.backgroundImage = im3;
                slide = 3;
            } else if (element === 4) {
                con.style.backgroundImage = im4;
                slide = 4;
            } else if (element === 5) {
                con.style.backgroundImage = im5;
                slide = 5;
            } else if (element === 6) {
                con.style.backgroundImage = im6;
                slide = 6;
            }

            openBlank();
        }

        const closeSlides = (e) => {
            if (e.target != con) {
                empty.style.opacity = '0';
                empty.style.zIndex = '-1';
            }
        }

        const arrows = () => {
            if (event.keyCode === 37) {
                leftClick(slide)
            }
            if (event.keyCode === 39) {
                rightClick(slide)
            }
        }

        b1.addEventListener('click', () => boom(1));
        b2.addEventListener('click', () => boom(2));
        b3.addEventListener('click', () => boom(3));
        b4.addEventListener('click', () => boom(4));
        b5.addEventListener('click', () => boom(5));
        b6.addEventListener('click', () => boom(6));
        window.addEventListener('click', closeSlides, {
            capture: true
        });
        empty.addEventListener('keyup', arrows);
    </script>
</body>

</html>
