    <div class="blank">
        <div class="container">
            <button onclick="leftClick(slide)"> <img src="img/arrow2.png" class="left arr"> </button>
            <button onclick="rightClick(slide)"> <img src="img/arrow.png" class="right arr"> </button>
        </div>
    </div>


    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: rgb(231, 230, 230);
            height: 100vh;
        }

        .title {
            font-size: 40px;
            font-weight: 900;
            text-align: center;
        }

        .galeria {
            width: 90vw;
            height: 670px;
            margin: 0 auto;
            background-color: rgb(206, 206, 206);
            outline: 8px solid #514d68;
            padding: 10px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-template-rows: repeat(2, 1fr);
            grid-gap: 10px;
        }

        button {
            border: none;
            background: none;
        }

        .image {
            width: 100%;
            height: 100%;
            border: 1px solid #000;
            border-radius: 4px;
            place-self: center;
            transition: .3s;
            cursor: pointer;
            z-index: 3;
            background-size: cover;
        }

        .image:hover {
            transform: scale(1.04);
            filter: brightness(1.2);
        }

        .blank {
            opacity: 0;
            position: absolute;
            top: 0%;
            width: 100%;
            height: 110vh;
            background-color: rgba(0, 0, 0, .7);
            z-index: -1;
            transition: .3s;
        }

        .container {
            background-position: bottom;
            background-size: cover;
            background-repeat: no-repeat;
            width: 70vw;
            height: 85vh;
            margin: 5% auto;
            border-radius: 30px;
            border: 5px solid rgba(255, 255, 255, .5);
            position: fixed;
            left: 15%;
        }

        .arr {
            transition: .3s;
            opacity: 1;
            width: 110px;
            cursor: pointer;
            top: 43%;
            position: absolute;
            z-index: 17;
            filter: invert(1);
            transition: .3s;
        }

        .left {
            left: -15%;
        }

        .right {
            right: -15%;
        }

        .left:hover,
        .right:hover {
            transform: scale(1.2);
            filter: drop-shadow(0 0 2px rgb(0, 0, 0)) invert(1);
        }

        .left:active,
        .right:active {
            opacity: .6;
            transform: scale(1.2);
            filter: drop-shadow(0 0 2px rgb(0, 0, 0)) invert(1);
        }

